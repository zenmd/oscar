<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.oscarehr.PMmodule.model">
	<class name="ClientHistory" table="client_history">
		<id column="his_id" name="Id" type="java.lang.Integer" unsaved-value="0">
			<generator class="native" />
		</id>
		<property column="client_id"  name="ClientId" not-null="true" type="java.lang.Integer" />
		<property column="action"  name="Action" not-null="false" />
		<property column="action_date" name="ActionDate" not-null="false" type="java.util.Calendar" />
		<property column="provider_no" name="ProviderNo" />
		<property column="notes" name="Notes" not-null="false" type="string" />
		<property column="program_id" name="ProgramId" not-null="true" type="java.lang.Integer" />
		<property column="program_id2" name="ProgramId2" />
		<property column="his_date" length="19" name="HistoryDate" not-null="false" type="timestamp" />
		<property name="ProviderLastName" type="string" formula="(select p.last_name from provider p where p.provider_no = provider_no)" />
		<property name="ProviderFirstName" type="string" formula="(select p.first_name from provider p where p.provider_no = provider_no)" />
		<property name="ProgramName" type="string" formula="(select p.name from program p where p.program_id = program_id)" />
		<property name="programType" type="string" formula="(select p.type from program p where p.program_id = program_id)" />
	</class>
</hibernate-mapping>
