<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.oscarehr.PMmodule.model">
	<class name="ClientReferral" table="client_referral">
		<id column="referral_id" name="Id" type="java.lang.Integer">
			<generator class="sequence">
   			 <param name="sequence">seq_client_referral_id</param>
			</generator>
		</id>
		<property column="client_id" length="11" name="clientId" not-null="true" type="java.lang.Integer" />
		<property column="referral_date" name="referralDate" not-null="false" />
		<property column="provider_no" name="providerNo" />
		<property column="notes" name="notes" not-null="false" type="string" />
		<property column="completion_notes" name="completionNotes" not-null="false" type="string" />
		<property column="program_id" length="11" name="programId" not-null="true" type="java.lang.Integer" />
		<property column="status" length="30" name="status" not-null="false" type="string" />
		<property column="automanual" name="autoManual"  />
		<property column="completion_date" name="completionDate" not-null="false" />
		<property name="providerLastName" type="string" formula="(select p.last_name from provider p where p.provider_no = provider_no)" />
		<property name="providerFirstName" type="string" formula="(select p.first_name from provider p where p.provider_no = provider_no)" />
		<property name="programName" type="string" formula="(select p.name from program p where p.program_id = program_id)" />
		<property name="programType" type="string" formula="(select p.type from program p where p.program_id = program_id)" />
		<property column="present_problems" name="presentProblems" not-null="false" type="string" />
		<property column="rejectionReason" length="10" name="rejectionReason" not-null="false" type="string"/>
		<property name="rejectionReasonDesc" type="string" formula="(select p.description from lst_intake_reject_reason p where p.code = rejectionReason)" />
		<property name="fromProgramId" column="fromprogramid"  type="java.lang.Integer" />
		<property name="fromIntakeId" column="intake_id"></property>
	</class>
</hibernate-mapping>
